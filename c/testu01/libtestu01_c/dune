(rule
 (deps TestU01-1.2.3.zip)
 (targets
  libtestu01.a libtestu01.so libtestu01.so.0  libtestu01.so.0.0.1
  libprobdist.a libprobdist.so libprobdist.so.0 libprobdist.so.0.0.1
  gdef.h gdefconf.h unif01.h bbattery.h)
 (action
  (progn
   (run unzip TestU01-1.2.3)
   (system "cd TestU01-1.2.3 && ./configure")
   (system "cd TestU01-1.2.3 && make")
   (system "cp TestU01-1.2.3/include/*.h .")
   (system "cp TestU01-1.2.3/testu01/.libs/* .")
   (system "cp TestU01-1.2.3/probdist/.libs/* ."))))
